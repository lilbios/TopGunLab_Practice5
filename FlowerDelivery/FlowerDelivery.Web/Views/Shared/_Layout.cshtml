<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!--Healines-->
    <!--Text-->
    <!-- Headers-->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat+Subrayada&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div  class = "navbar  navbar-fixed-top navbar-light" style="background-color: #e3f2fd;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Flower Delivery", "Index", "Flowers", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Flowers", "Index", "Flowers")</li>
                    <li>@Html.ActionLink("Plantations", "Index", "Plantations")</li>
                    <li>@Html.ActionLink("Warehouses", "Index", "Warehouses")</li>
                    <li>@Html.ActionLink("Supplies", "Index", "Supplies")</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Others
                        </a>
                        <div class="dropdown-menu"  aria-labelledby="navbarDropdown">
                            <a class="dropdown-item " href="@Url.Action("Index","PlantationFlowers")">Plantation flowers</a>
                            <hr />
                            <a class="dropdown-item" href="@Url.Action("Index","WarehouseFlowers")">Warehouse flowers</a>
                            <hr />
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("Index","SupplyFlowers")">Flower supplies</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
